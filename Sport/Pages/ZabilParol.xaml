        <TextBox x:Name="tbnoviparoli2" HorizontalAlignment="Left" Height="42" Margin="83,262,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="338" Visibility="Hidden"/>
        <Label x:Name="lbnowiparo2" Content="Введите пароль еще раз" HorizontalAlignment="Left" Margin="74,231,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
        <Label x:Name="lbkod" Content="Введите код" HorizontalAlignment="Left" Margin="74,144,0,0" VerticalAlignment="Top" Visibility="Hidden" />


    </Grid>
